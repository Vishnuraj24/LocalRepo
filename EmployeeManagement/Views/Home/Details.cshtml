@{
}
@model Employee
@{
    //Layout = "../Shared/_layout.cshtml";
    ViewBag.Title = "Employee details";
}

        <h2>@ViewBag.Title</h2>
        
       <div class="card" style="width: 18rem;">
        
            <div class="card-header">
                <h2>@Model.Name</h2>
            </div>

            <div class="card-body">
                <div>
                    <img src="~/Images/istockphoto-1300512215-170667a.jpg" class="img-fluid" alt="Responsive image" asp-append-version="true">
                </div>
                <div>
                    <h4>ID : @Model.Id</h4>
                </div>
                <div>
                    <h4>Department : @Model.Department</h4>
                </div>
                <div>
                    <h4>Email: @Model.Email</h4>
                </div>
            </div>
       
            <div class="card-footer">
                <a asp-action="EmployeeList" class="btn btn-primary">Back</a>
                <a asp-action="EmployeeList" class="btn btn-primary">Edit</a>
                <a asp-action="EmployeeList" class="btn btn-danger">Delete</a>
            </div>
            
        
       </div>
 @section Scripts{
     <script src="~/Javascript/SampleScript.js"></script>
 }