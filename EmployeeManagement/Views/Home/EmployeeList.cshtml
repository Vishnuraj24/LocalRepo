@model List<Employee>
@{
    //Layout = "../Shared/_layout.cshtml";
    ViewBag.Title = "All Employee details";
}

        <h2>
            @ViewBag.Title
        </h2>
        <br />
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Id</th>
                    <th>Department</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Id</td>
                    <td>@emp.Department</td>
                    <td>@emp.Email</td>
                    <td>@emp.Phonenumber</td>
                    <td><a asp-controller="Home" asp-action="Details" asp-route-id="@emp.Id" class="btn btn-primary">View</a></td>
                    <td><a asp-controller="" asp-action="" asp-route-id="" class="btn btn-primary">Edit</a></td>
                    <td><a asp-controller="" asp-action="" asp-route-id="" class="btn btn-danger">Delete</a></td>
                </tr>
                
            }
           
        </tbody>
        </table>
        
        
